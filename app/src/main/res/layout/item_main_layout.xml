<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size5dp"
        android:background="@drawable/border_layout_item"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relaySTT"
            android:layout_width="@dimen/size50dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_layout_item_child"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+100"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size18sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size5dp"
            android:orientation="vertical"
            android:padding="@dimen/size5dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size10dp"
                android:text="Hacker News by YCombinator "
                android:textColor="@color/colorGrayTitle"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/size0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/size5dp"
                    android:paddingTop="@dimen/size5dp">

                    <TextView
                        android:id="@+id/txtNameURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="facebook.com"
                        android:textColor="@color/colorGray" />

                    <TextView
                        android:id="@+id/txtDatime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNameURL"
                        android:text="1 hour ago"
                        android:textColor="@color/colorGray" />

                    <TextView
                        android:id="@+id/txtGach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNameURL"
                        android:layout_toRightOf="@+id/txtDatime"
                        android:text=" - " />

                    <TextView
                        android:id="@+id/txtByUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNameURL"
                        android:layout_toRightOf="@+id/txtGach"
                        android:text="vuconghieu"
                        android:textColor="@color/colorGray" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnComment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_comment_red_800_24dp" />

                <TextView
                    android:id="@+id/txtCountUserComment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="@dimen/size10dp"
                    android:text="15"
                    android:textColor="@color/colorRed" />

                <ImageButton
                    android:id="@+id/btnBrower"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_open_in_browser_red_800_24dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>